<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>CosmosDB data store for saving Event Source state in Event Framework.</Description>
    <PackageDescription>CosmosDB data store for saving Event Source state in Event Framework.</PackageDescription>
    <PackageId>Weikio.EventFramework.EventSource.DataSources.CosmosDB</PackageId>
    <Product>Weikio.EventFramework.EventSource.DataSources.CosmosDB</Product>
    <PackageTags>cloudevents;event gateway;event router;datasource;cosmosdb</PackageTags>
    <Title>CosmosDB data store for Event Framework</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Adafy.Candy.CosmosDB" Version="1.0.0-alpha.0.36" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Weikio.EventFramework.EventSource.Abstractions\Weikio.EventFramework.EventSource.Abstractions.csproj" />
  </ItemGroup>
  
</Project>
