<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Weik.io</Authors>
    <Company>Weik.io</Company>
    <Description>Event Framework is a CloudEvents router and gateway for .NET. Easily send, receive and handle CloudEvents.</Description>
    <PackageDescription>Event Framework is a CloudEvents router and gateway for .NET. Easily send, receive and handle CloudEvents.</PackageDescription>
    <PackageProjectUrl>https://www.weik.io</PackageProjectUrl>
    <Copyright>©2019 Weik.io</Copyright>
    <PackageId>Weikio.EventFramework</PackageId>
    <Product>Weikio.EventFramework</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/weikio/Weikio.EventFramework</RepositoryUrl>
    <PackageTags>cloudevents;event gateway;event router</PackageTags>
    <PackageIcon>logo_256.png</PackageIcon>
    <Title>Event Framework</Title>
    <MinVerMinimumMajorMinor>1.0</MinVerMinimumMajorMinor>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="3.0.0" />
    <PackageReference Include="MinVer" Version="2.0.0" />
    <PackageReference Include="CloudNative.CloudEvents" Version="1.0.60" />
    <PackageReference Include="Weikio.AspNetCore.StartupTasks" Version="1.0.0-alpha.*" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../docs/logo_256.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\..\oss\coresdk-csharp\src\CloudNative.CloudEvents\CloudNative.CloudEvents.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions\Weikio.EventFramework.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CloudNative.CloudEvents, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null">
      <HintPath>..\..\lib\CloudEvents\CloudNative.CloudEvents.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
