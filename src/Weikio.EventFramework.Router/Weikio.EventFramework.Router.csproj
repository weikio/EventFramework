<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Cloud Events router built on top of the Event Framework. Route cloud events from one place to an another.</Description>
    <PackageDescription>Cloud Events router built on top of the Event Framework. Route cloud events from one place to an another.</PackageDescription>
    <PackageId>Weikio.EventFramework.Router</PackageId>
    <Product>Weikio.EventFramework.Router</Product>
    <PackageTags>cloudevents;event gateway;event router</PackageTags>
    <Title>Cloud Event Router for ASP.NET Core</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CloudNative.CloudEvents" Version="1.3.80" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions.DependencyInjection\Weikio.EventFramework.Abstractions.DependencyInjection.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions\Weikio.EventFramework.Abstractions.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.EventGateway\Weikio.EventFramework.EventGateway.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.EventPublisher\Weikio.EventFramework.EventPublisher.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Extensions.EventAggregator\Weikio.EventFramework.Extensions.EventAggregator.csproj" />
  </ItemGroup>

</Project>
