<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Event Source hosting for Event Framework. Event Framework is a CloudEvents router and gateway for .NET.</Description>
    <PackageDescription>Event Source hosting for Event Framework. Event Framework is a CloudEvents router and gateway for .NET.</PackageDescription>
    <PackageId>Weikio.EventFramework.EventSource</PackageId>
    <Product>Weikio.EventFramework.EventSource</Product>
    <PackageTags>cloudevents;event gateway;event router</PackageTags>
    <Title>Event Source hosting for ASP.NET Core</Title>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Quartz" Version="3.0.7" />
    <PackageReference Include="Weikio.PluginFramework" Version="1.2.1" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions.DependencyInjection\Weikio.EventFramework.Abstractions.DependencyInjection.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions\Weikio.EventFramework.Abstractions.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.EventSource.Abstractions\Weikio.EventFramework.EventSource.Abstractions.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Router\Weikio.EventFramework.Router.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework\Weikio.EventFramework.csproj" />
  </ItemGroup>
  
  
</Project>
