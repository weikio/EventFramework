<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Event Aggregator for handling Cloud Events. Built on top of the Event Framework.</Description>
    <PackageDescription>Event Aggregator for handling Cloud Events. Built on top of the Event Framework.</PackageDescription>
    <PackageId>Weikio.EventFramework.EventAggregator</PackageId>
    <Product>Weikio.EventFramework.EventAggregator</Product>
    <PackageTags>event aggregator;cloudevents;event gateway;</PackageTags>
    <Title>Cloud Events Aggregator for ASP.NET Core</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CloudNative.CloudEvents" Version="1.3.80" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.1.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions.DependencyInjection\Weikio.EventFramework.Abstractions.DependencyInjection.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Abstractions\Weikio.EventFramework.Abstractions.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.EventAggregator.Core\Weikio.EventFramework.EventAggregator.Core.csproj" />
    <ProjectReference Include="..\Weikio.EventFramework.Extensions.EventAggregator\Weikio.EventFramework.Extensions.EventAggregator.csproj" />
  </ItemGroup>

</Project>
